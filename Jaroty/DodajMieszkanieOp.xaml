<Window x:Class="Jaroty.DodajMieszkanieOp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jaroty"
        mc:Ignorable="d"
        Title="DodajMieszkanieOp" Height="350" Width="300"
        WindowStyle="None" ResizeMode="NoResize"
        Background="Orange"
        WindowStartupLocation="CenterScreen"
        Icon="/images/ikonka.png">
    <Grid>
        <Border Height="10" Background="Red" VerticalAlignment="Top"/>
        <Border Width="10" Background="Red" HorizontalAlignment="Left"/>
        <Border Width="10" Background="Red" HorizontalAlignment="Right"/>
        <Border Height="10" Background="Red" VerticalAlignment="Bottom"/>
        <Button Name="Back" Content="Wróć" Width="80" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Foreground="Orange" Background="Red" FontWeight="Heavy" Click="Back_Click"/>
        <Button Name="Add" Content="Dodaj mieszkanie" Width="120" Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10"  Foreground="Orange" Background="Red" FontWeight="Heavy" Click="Add_Click"/>
        <StackPanel>
            <TextBlock Text="ID wlasciciela" 
                FontWeight="Heavy"
                FontSize="16"
                Foreground="Red"
                HorizontalAlignment="Center"
                Margin="0 15 0 5"/>
            <ComboBox x:Name="IdWlasciciel" Width="200"/>
            <TextBlock Text="Ulica" 
                FontWeight="Heavy"
                FontSize="16"
                Foreground="Red"
                HorizontalAlignment="Center"
                Margin="0 0 0 0"/>
            <TextBox Name="Ulica" 
                     Width="200" 
                     Margin="0 5"/>
            <TextBlock Text="Numer Budynku" 
                       FontWeight="Heavy"
                       FontSize="16"
                       Foreground="Red"
                       HorizontalAlignment="Center"
                       Margin="0 5 0 0"/>
            <TextBox Name="NrBloku" 
                     Width="200" 
                     Margin="0 5"
                     PreviewTextInput="NumberValidationTextBox"/>
            <TextBlock Text="Numer Mieszkania" 
                FontWeight="Heavy"
                FontSize="16"
                Foreground="Red"
                HorizontalAlignment="Center"/>
            <TextBox Name="NrMieszkania" 
                     Width="200" 
                     Margin="0 5"
                     PreviewTextInput="NumberValidationTextBox"/>
            <TextBlock Text="Metraż w metrach kwadratowych" 
                FontWeight="Heavy"
                FontSize="16"
                Foreground="Red"
                HorizontalAlignment="Center"
                Margin="0 5 0 0"/>
            <TextBox Name="Metraz" 
                     Width="200" 
                     Margin="0 5"
                     PreviewTextInput="NumberValidationTextBox"/>
        </StackPanel>
    </Grid>
</Window>
